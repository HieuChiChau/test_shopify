<div class="header-top header-top-ptb-1 d-none d-lg-block">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-xl-3 col-lg-4">
                <div class="header-info">
                    <ul>
                        <li>
                            <a class="language-dropdown-active" href="#">
                                <i class="fi-rs-world"></i> {{ settings.default_language }}
                                <i class="fi-rs-angle-small-down"></i>
                            </a>
                            <ul class="language-dropdown">
                                {% for block in section.blocks %}
                                    {% if block.type == "language" %}
                                        <li>
                                            <a href="#">
                                                {% if block.settings.flag != blank %}
                                                    <img src="{{ block.settings.flag | image_url }}" alt="{{ block.settings.language_name }}">
                                                {% endif %}                                                
                                                {{ block.settings.language_name }}
                                            </a>
                                        </li>
                                    {% endif %}
                                {% endfor %}
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-xl-6 col-lg-4">
                <div class="text-center">
                    <div id="news-flash" class="d-inline-block">
                        <ul>
                            {% for block in section.blocks %}
                                {% if block.type == "announcement" %}
                                    <li>
                                        {{ block.settings.announcement_text }}
                                        {% if block.settings.announcement_link != blank %}
                                            <a href="{{ block.settings.announcement_link }}">{{ block.settings.announcement_highlight_text }}</a>
                                        {% endif %}
                                    </li>
                                {% endif %}
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-lg-4">
                <div class="header-info header-info-right">
                    <ul>
                        <li>
                            <i class="fi-rs-key"></i>
                            <a href="#">{{ settings.auth_login_text }}</a> /
                            <a href="#">{{ settings.auth_signup_text }}</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

