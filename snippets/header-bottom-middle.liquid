<div class="main-menu main-menu-padding-1 main-menu-lh-2 d-none d-lg-block">
    <nav>
        <ul>
            {% for link in linklists[section.settings.menu].links %}
                {% if link.links != blank %}
                    {% assign has_mega_menu = false %}
                    {% for sub_link in link.links %}
                        {% if sub_link.links != blank %}
                            {% assign has_mega_menu = true %}
                        {% endif %}
                    {% endfor %}

                    {% if has_mega_menu %}
                        <!-- Mega Menu -->
                        <li class="position-static">
                            <a href="{{ link.url }}">{{ link.title }} <i class="fi-rs-angle-down"></i></a>
                            <ul class="mega-menu">
                                {% for sub_link in link.links %}
                                    <li class="sub-mega-menu sub-mega-menu-width-22">
                                        <a class="menu-title" href="{{ sub_link.url }}">{{ sub_link.title }}</a>
                                        <ul>
                                            {% for child_link in sub_link.links %}
                                                <li><a href="{{ child_link.url }}">{{ child_link.title }}</a></li>
                                            {% endfor %}
                                        </ul>
                                    </li>
                                {% endfor %}
                                <li class="sub-mega-menu sub-mega-menu-width-34">
                                    <div class="menu-banner-wrap">
                                        <a href="#">
                                            <img src="{{ settings.mega_menu_image | img_url }}" alt="Mega Menu">
                                        </a>
                                        <div class="menu-banner-content">
                                            <h4>{{ settings.mega_menu_subtitle }}</h4>
                                            <h3>{{ settings.mega_menu_title }}</h3>
                                            <div class="menu-banner-price">
                                                <span class="new-price text-success">{{ settings.mega_menu_discount_text }}</span>
                                            </div>
                                            <div class="menu-banner-btn">
                                                <a href="{{ settings.mega_menu_button_url }}">{{ settings.mega_menu_button_text }}</a>
                                            </div>
                                        </div>
                                        <div class="menu-banner-discount">
                                            <h3><span>{{ settings.mega_menu_discount_percent }}</span> off</h3>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </li>
                    {% else %}
                        <!-- Sub Menu -->
                        <li>
                            <a href="{{ link.url }}">{{ link.title }} <i class="fi-rs-angle-down"></i></a>
                            <ul class="sub-menu">
                                {% for sub_link in link.links %}
                                    <li>
                                        <a href="{{ sub_link.url }}">{{ sub_link.title }}</a>
                                        {% if sub_link.links != blank %}
                                            <ul>
                                                {% for child_link in sub_link.links %}
                                                    <li><a href="{{ child_link.url }}">{{ child_link.title }}</a></li>
                                                {% endfor %}
                                            </ul>
                                        {% endif %}
                                    </li>
                                {% endfor %}
                            </ul>
                        </li>
                    {% endif %}
                {% else %}
                    <!-- Simple Menu -->
                    <li>
                        <a href="{{ link.url }}">{{ link.title }}</a>
                    </li>
                {% endif %}
            {% endfor %}
        </ul>
    </nav>
</div>