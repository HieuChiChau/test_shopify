<section class="home-slider position-relative pt-50">
    <div class="hero-slider-1 dot-style-1 dot-style-1-position-1">
        {% for block in section.blocks %}
            <div class="single-hero-slider single-animation-wrap">
                <div class="container">
                    <div class="row align-items-center slider-animated-1">
                        <div class="col-lg-5 col-md-6">
                            <div class="hero-slider-content-2">
                                <h4 class="animated">{{ block.settings.sub_title }}</h4>
                                <h2 class="animated fw-900">{{ block.settings.main_title }}</h2>
                                <h1 class="animated fw-900 text-brand">{{ block.settings.highlight_text }}</h1>
                                <p class="animated">{{ block.settings.description }}</p>
                                <a class="animated btn btn-brush btn-brush-{{ forloop.index }}" href="{{ block.settings.button_link }}">
                                    {{ block.settings.button_text }}
                                </a>
                            </div>
                        </div>
                        <div class="col-lg-7 col-md-6">
                            <div class="single-slider-img single-slider-img-1">
                                <img class="animated slider-1-{{ forloop.index }}" src="{{ block.settings.image | img_url: 'master' }}" alt="">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    <div class="slider-arrow hero-slider-1-arrow"></div>
</section>


{% schema %}
{
  "name": "Homepage Slider",
  "settings": [],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        { "type": "text", "id": "sub_title", "label": "Sub Title", "default": "Trade-in offer" },
        { "type": "text", "id": "main_title", "label": "Main Title", "default": "Supper value deals" },
        { "type": "text", "id": "highlight_text", "label": "Highlight Text", "default": "On all products" },
        { "type": "text", "id": "description", "label": "Description", "default": "Save more with coupons & up to 70% off" },
        { "type": "text", "id": "button_text", "label": "Button Text", "default": "Shop Now" },
        { "type": "url", "id": "button_link", "label": "Button Link" },
        { "type": "image_picker", "id": "image", "label": "Slide Image" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Homepage Slider",
      "blocks": [
        { "type": "slide" },
        { "type": "slide" }
      ]
    }
  ]
}
{% endschema %}